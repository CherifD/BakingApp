<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_tablet_recipes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".RecipeStepsActivity">

    <FrameLayout
        android:id="@+id/fragment_container_steps"
        android:name="com.cherifcodes.bakingapp.RecipeStepsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="2" />

    <View
        android:id="@+id/vw_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary" />

    <FrameLayout
        android:id="@+id/fragment_video_player_container_tab"
        android:name="com.cherifcodes.bakingapp.VideoPlayerFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="3" />

</LinearLayout>