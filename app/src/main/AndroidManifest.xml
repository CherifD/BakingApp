<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cherifcodes.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RecipeStepsActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="parent"
                android:value=".MainActivity" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".VideoPlayerActivity" />

        <receiver android:name=".BakingAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <!--The following action allows updating the widget's list upon user clicks-->
                <action android:name="com.cherifcodes.bakingapp.UPDATE_WIDGET_LIST" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/baking_app_widget_info" />
        </receiver>

        <!--Allows communication between the listView addapter class and the widget-->
        <service
            android:name=".services.CollectionWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <service android:name=".services.FetchDataService" />

    </application>

</manifest>